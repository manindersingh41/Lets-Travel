mixin hotel(hotel)
    .hotel
        .hotel_img
            a(href=`/all/${hotel._id}`)
            img(src=`/images/hotels/${hotel.image}`, alt="")
        .hotel_info
            a(href=`/all/${hotel._id}`)
                h3= hotel.hotel_name
            hr
            if url.startsWith('/all/')
                p=hotel.hotel_description
            p= `Start rating: ${hotel.star_rating}`
            p= `Country: ${hotel.country}`
            p= `Cost Per Night: ${hotel.cost_per_night}`  